{
  "name": "github-issue",
  "displayName": "GitHub Issue",
  "version": "0.2.0",
  "description": "标准化的 GitHub Issue 创建与处理工具，支持项目间自动化协作。提供 MCP Server 模式供 AI 调用。",
  "author": "shichao402",
  "license": "MIT",
  "type": "mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/shichao402/github-issue-pack.git"
  },
  "keywords": [
    "github",
    "issue",
    "automation",
    "collaboration",
    "mcp",
    "ai"
  ],
  "bin": {
    "github-issue": {
      "darwin-amd64": "bin/github-issue-darwin-amd64",
      "darwin-arm64": "bin/github-issue-darwin-arm64",
      "linux-amd64": "bin/github-issue-linux-amd64",
      "linux-arm64": "bin/github-issue-linux-arm64",
      "windows-amd64": "bin/github-issue-windows-amd64.exe"
    }
  },
  "mcp": {
    "command": "bin/github-issue",
    "args": ["serve"],
    "env": {
      "GITHUB_TOKEN": "${GITHUB_TOKEN}"
    }
  },
  "dec": {
    "minVersion": "1.8.0"
  }
}
